{
    "name": "imperiumstellarum",
    "version": "0.5.0",
    "private": true,
    "description": "Imperium Stellarum - a turn-based multiplayer browser game of galactic conquest.",
    "license": "MIT",
    "author": {
        "name": "Sven Scharfenberg",
        "email": "ash@imperiumstellarum.io"
    },
    "scripts": {
        "prod": "node --trace-deprecation ./resources/build/buildProd.js",
        "dev": "node ./resources/build/serveDev.js",
        "icons": "node ./resources/build/icons.js",
        "cleanup": "node ./resources/build/cleanup.js",
        "db:testdata": "php artisan migrate:fresh && php artisan db:seed",
        "ide:helper": "php artisan ide-helper:generate && php artisan ide-helper:meta && php artisan ide-helper:models"
    },
    "engines": {
        "node": "^15.8.0",
        "npm": "^7.5.1"
    },
    "dependencies": {
        "@interactjs/actions": "^1.10.11",
        "@interactjs/auto-start": "^1.10.11",
        "@interactjs/interact": "^1.10.11",
        "@interactjs/modifiers": "^1.10.11",
        "@jaames/iro": "^5.5.1",
        "axios": "^0.21.1",
        "date-fns": "^2.21.1",
        "flatpickr": "^4.6.9",
        "lodash": "^4.17.21",
        "noty": "^3.2.0-beta",
        "nouislider": "^14.7.0",
        "poisson-disk-sampling": "^2.2.2",
        "vue": "^3.0.11",
        "vue-draggable-next": "^2.0.1",
        "vue-i18n": "^9.1.6",
        "vue-next-select": "^2.1.1",
        "vue-router": "^4.0.6",
        "vuex": "^4.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.13.16",
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@babel/preset-env": "^7.13.15",
        "@interactjs/dev-tools": "^1.10.11",
        "@mapbox/stylelint-processor-arbitrary-tags": "^0.4.0",
        "@vue/compiler-sfc": "^3.0.11",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.2.2",
        "chalk": "^4.1.1",
        "child_process": "^1.0.2",
        "compression-webpack-plugin": "^7.1.2",
        "copy-webpack-plugin": "^8.1.1",
        "css-loader": "^5.2.4",
        "dateformat": "^4.5.1",
        "eslint": "^7.24.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-vue": "^7.9.0",
        "eslint-webpack-plugin": "^2.5.4",
        "file-loader": "^6.2.0",
        "html-webpack-harddisk-plugin": "^2.0.0",
        "html-webpack-plugin": "^5.3.1",
        "image-minimizer-webpack-plugin": "^2.2.0",
        "imagemin-gifsicle": "^7.0.0",
        "imagemin-jpegtran": "^7.0.0",
        "imagemin-optipng": "^8.0.0",
        "imagemin-svgo": "^8.0.0",
        "mini-css-extract-plugin": "^1.5.0",
        "node-sass": "^5.0.0",
        "postcss-loader": "^5.2.0",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "sass-loader": "^11.0.1",
        "semver": "^7.3.5",
        "stylelint": "^13.12.0",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-standard": "^21.0.0",
        "stylelint-order": "^4.1.0",
        "stylelint-scss": "^3.19.0",
        "stylelint-webpack-plugin": "^2.1.1",
        "svgo": "^2.3.0",
        "svgstore": "^3.0.0-2",
        "url-loader": "^4.1.1",
        "vue-loader": "^16.2.0",
        "vue-style-loader": "^4.1.3",
        "webpack": "^5.35.0",
        "webpack-bundle-analyzer": "^4.4.1",
        "webpack-dev-server": "^3.11.2",
        "webpack-merge": "^5.7.3"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ],
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "useBuiltIns": "entry",
                    "corejs": "3"
                }
            ]
        ],
        "plugins": [
            "@babel/plugin-syntax-dynamic-import",
            "@babel/plugin-proposal-class-properties"
        ]
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "vue"
        ],
        "transform": {
            "^.+\\.js$": "babel-jest",
            "^.+\\.vue$": "vue-jest"
        }
    }
}
