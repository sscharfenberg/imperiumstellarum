{
    "name": "imperiumstellarum",
    "version": "0.0.1",
    "private": true,
    "description": "Imperium Stellarum - a turn-based multiplayer browser game of galactic conquest.",
    "license": "MIT",
    "author": {
        "name": "Sven Scharfenberg",
        "email": "ash@imperiumstellarum.io"
    },
    "scripts": {
        "prod": "node ./resources/build/buildProd.js",
        "dev": "node ./resources/build/serveDev.js",
        "icons": "node ./resources/build/icons.js",
        "cleanup": "node ./resources/build/cleanup.js",
        "db:fresh": "php artisan migrate:fresh && php artisan db:seed"
    },
    "engines": {
        "node": "^14.11.0",
        "npm": "^6.14.8"
    },
    "dependencies": {
        "axios": "^0.20.0",
        "core-js": "^3.6.5",
        "flatpickr": "^4.6.6",
        "lodash": "^4.17.20",
        "nouislider": "^14.6.2",
        "poisson-disk-sampling": "^2.2.2",
        "vue": "^3.0.0",
        "vue-i18n": "^9.0.0-beta.3",
        "vue-router": "^4.0.0-beta.12",
        "vuex": "^4.0.0-beta.4"
    },
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@babel/plugin-proposal-class-properties": "^7.10.4",
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@babel/preset-env": "^7.11.5",
        "@mapbox/stylelint-processor-arbitrary-tags": "^0.3.0",
        "@vue/compiler-sfc": "^3.0.0",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.1.0",
        "chalk": "^4.1.0",
        "child_process": "^1.0.2",
        "compression-webpack-plugin": "^6.0.2",
        "copy-webpack-plugin": "^6.1.1",
        "css-loader": "^4.3.0",
        "dateformat": "^3.0.3",
        "eslint": "^7.9.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-vue": "^7.0.0-beta.3",
        "file-loader": "^6.1.0",
        "html-webpack-harddisk-plugin": "^1.0.2",
        "html-webpack-plugin": "^4.4.1",
        "imagemin-mozjpeg": "^9.0.0",
        "imagemin-webpack-plugin": "^2.4.2",
        "mini-css-extract-plugin": "^0.11.2",
        "node-sass": "^4.14.1",
        "postcss-loader": "^4.0.2",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.1.2",
        "rimraf": "^3.0.2",
        "sass-loader": "^10.0.2",
        "semver": "^7.3.2",
        "stylelint": "^13.7.1",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-order": "^4.1.0",
        "stylelint-scss": "^3.18.0",
        "stylelint-webpack-plugin": "^2.1.0",
        "svgo": "^1.3.2",
        "svgstore": "^3.0.0-2",
        "url-loader": "^4.1.0",
        "vue-loader": "^16.0.0-beta.7",
        "vue-style-loader": "^4.1.2",
        "webpack": "^4.44.2",
        "webpack-bundle-analyzer": "^3.9.0",
        "webpack-dev-server": "^3.11.0",
        "webpack-merge": "^5.1.4"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ],
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "useBuiltIns": "entry",
                    "corejs": "3"
                }
            ]
        ],
        "plugins": [
            "@babel/plugin-syntax-dynamic-import",
            "@babel/plugin-proposal-class-properties"
        ]
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "vue"
        ],
        "transform": {
            "^.+\\.js$": "babel-jest",
            "^.+\\.vue$": "vue-jest"
        }
    }
}
